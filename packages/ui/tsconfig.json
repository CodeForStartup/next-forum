{
  "extends": "../tsconfig/react-library.json",
  "include": [
    "."
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "@/*",
        "assets/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}